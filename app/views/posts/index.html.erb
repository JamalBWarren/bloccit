<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<h1>All Posts</h1>

<% @posts.each_with_index do |post, index| %>
    <div class="media">
        <div class="media-body">
            <h4 class="media-heading">
               <% if (index + 1) % 5 == 1 %>
                   <%= link_to "SPAM", post %>
               <% else %>
                   <%= link_to post.title, post %>
               <% end %>
            </h4>
        </div>
    </div>
<% end %>